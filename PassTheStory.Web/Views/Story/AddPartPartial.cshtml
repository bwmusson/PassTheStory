@model PassTheStory.Web.Models.StoryPartModel


@using (Html.BeginForm()) 
{
    
<div class="form-horizontal full-width">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group full-width">
        @Html.LabelFor(model => model.PartText, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 full-width">
            <textarea class="form-control"
                      id="PartText"
                      name="PartText"
                      rows="8"></textarea>
            @Html.ValidationMessageFor(model => model.PartText, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IsEnd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsEnd, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsEnd, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Add Part" onclick="location.href='@Url.Action("AddPart", "Story")'" class="btn btn-primary btn-default" />
            <input type="button" value="Pass" onclick="location.href='@Url.Action("Pass", "Story")'" class="btn" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
