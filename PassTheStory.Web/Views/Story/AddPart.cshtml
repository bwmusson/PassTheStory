@model PassTheStory.Web.Models.StoryPartModel

@{
    ViewBag.Title = "Add Part";
}

<h2>Add Part</h2>


@using (Html.BeginForm())
{
<div class="form-horizontal full-width">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group full-width">
        @Html.LabelFor(model => model.PartText, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 full-width">
            <textarea class="form-control"
                      id="PartText"
                      name="PartText"
                      rows="8"></textarea>
            @Html.ValidationMessageFor(model => model.PartText, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group full-width">
        @Html.LabelFor(model => model.IsEnd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 full-width">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsEnd)
                @Html.ValidationMessageFor(model => model.IsEnd, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.StoryId)
    @{
        var Id = new Guid(Request.Url.Query.ToString().Substring(Request.Url.Query.ToString().IndexOf("=") + 1));
    }


    <div class="form-group full-width">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Part" class="btn btn-primary btn-default" />
            <input type="button" value="Pass" onclick="location.href='@Url.Action("Pass", "Story")'" class="btn" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
