@model PassTheStory.Web.Models.StoryPartModel

@{
    ViewBag.Title = "Create Prompt";
}

<h2>Create Prompt</h2>


@using (Html.BeginForm()) 
{
    
<div class="form-horizontal full-width">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group full-width">
        @Html.LabelFor(model => model.StoryName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 full-width">
            @Html.EditorFor(model => model.StoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StoryName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group full-width">
        @Html.LabelFor(model => model.PartText, "Prompt Text", htmlAttributes: new { @class = "control-label col-md-2"})
        <div class="col-md-10 full-width">
            <textarea class="form-control"
                      id="PartText"
                      name="PartText"
                      rows="8"></textarea>
                @Html.ValidationMessageFor(model => model.PartText, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Prompt" class="btn btn-primary btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
