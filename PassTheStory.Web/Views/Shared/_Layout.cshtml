<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pass The Story</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body class="fullContent">
    @using Microsoft.AspNet.Identity;
    @if (Request.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="padding-top: 0px;">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">Pass The Story</a>
            <div>
                <ul class="navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item active">
                            <a href="@Url.Action("Index", "Home")" class="navbar-brand">Admin</a>
                        </li>
                    }
                </ul>
            </div>

            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right ml-auto" }))
            {

                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li class="pl-3"><a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
                </ul>
            }
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg nav">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand nav-link">
                <h2 class="align-top">
                    <img src="~/Content/images/PTS-Logo.png" width="60" height="60" class="d-inline-block " alt="Pass The Story Logo">
                    Pass The Story
                </h2>
            </a>
            <div class="navbar-right ml-auto">
                <ul class="nav navbar-nav nav-pills">
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Log In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "pl-3 nav-link" })</li>
                </ul>
            </div>
        </nav>
    }
        <div class="row" style="min-height: 100%;">
            @if (Request.IsAuthenticated)
            {


            }
            else
            {
                <nav class="container col-2 nav-column">
                    <ul class="nav flex-column nav-pills">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">About PTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">New Prompts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Finished Stories</a>
                        </li>
                        <li>
                            <br />
                        </li>
                        <li>
                            <br />
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Join Us</a>
                        </li>
                    </ul>
                </nav>
                <div class="body-content container col-10">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Pass The Story</p>
                    </footer>
                </div>
            }
        </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
